# ==============================================
# PLG UK Hub - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ---- Database (Supabase PostgreSQL) ----
# Pooled connection (port 6543, with ?pgbouncer=true)
DATABASE_URL="postgresql://postgres.YOUR_REF:YOUR_URL_ENCODED_PASSWORD@aws-0-eu-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (port 5432, used by Prisma Migrate / db push)
DIRECT_URL="postgresql://postgres.YOUR_REF:YOUR_URL_ENCODED_PASSWORD@aws-0-eu-west-2.pooler.supabase.com:5432/postgres"

# ---- NextAuth ----
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ---- Google Workspace (Service Account) ----
GOOGLE_SERVICE_ACCOUNT_EMAIL=""
GOOGLE_PRIVATE_KEY=""
GOOGLE_DRIVE_ROOT_FOLDER_ID=""

# ---- Google Sheets Knowledge Base ----
GOOGLE_SHEETS_AFTERCARE_ID=""
GOOGLE_SHEETS_PROTOCOLS_ID=""

# ---- Gmail Aftercare ----
GMAIL_SENDER_EMAIL=""
GMAIL_SENDER_NAME="PLG UK Hub"

# ---- Legal Watchdog (Google Custom Search) ----
GOOGLE_CUSTOM_SEARCH_API_KEY=""
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=""

# ---- Cron Security ----
CRON_SECRET="generate-a-random-string"
